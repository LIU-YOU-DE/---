/* 上传图片样式 */
.q-image-wrap{
  margin-bottom:40rpx;
  width: 200rpx;
  height: 240rpx;
  float: left;
  margin-left: 10rpx;
  position: relative;
}
.q-image-remover{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:-18rpx;
  right:4rpx;
 
}
.q-image-remover>image{
  width:40rpx;
  height:40rpx;
  z-index:1000;
}
.q-image-remover icon{
  position: absolute;
  left:12rpx;
  bottom:12rpx;
  color:#fff;
}
 
